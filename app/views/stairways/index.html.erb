  <title>Stairways</title>
  <%#= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    'gmaps4rails' %>
  <%#= javascript_include_tag "application" %>
  <%#= csrf_meta_tags %>
  <%#= yield :head %>
</head>
<body>

<%= gmaps("markers" => {"data" => @json, "options" => {"rich_marker" => true } }) %>
<%= yield :scripts %>

<table class="table">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "stairs" %></th>
      <th><%= "Times Ran By Everyone" %></th>
    </tr>
  </thead>
  <tbody>
    <%@stairways.each do |stairway|%>
      <tr>
        <td><%= stairway.name %></td>
        <td><%= stairway.stairs %></td>
        <td><%= stairway.user_runs.count %></td>
      </tr>
  </tbody>
  <%end%>
</table>
